# Human Staging Portal - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# Database Configuration (PostgreSQL/Supabase)
# ============================================
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_anon_key

# ============================================
# API Configuration
# ============================================
API_PORT=8001
API_HOST=0.0.0.0

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET_KEY=your_secret_key_here_generate_with_secrets_token_urlsafe_32
SESSION_TIMEOUT_HOURS=8

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO

# ============================================
# Subscription Credentials
# ============================================
# Store subscription credentials in a secure location:
# - Option A: Encrypted database table
# - Option B: Secure file storage with restricted access (not in git)
# - Option C: Secret management service (AWS Secrets Manager, etc.)
# 
# If using a YAML file, ensure it's listed in .gitignore:
# CREDENTIALS_FILE=./login_credentials.yaml
