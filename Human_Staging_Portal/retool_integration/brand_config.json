        "border_radius": "12px",
        "box_shadow": "0 4px 16px rgba(28, 45, 80, 0.1)",
        "header_background": "linear-gradient(135deg, #fda790 0%, #F5E6A8 100%)",
        "header_border_bottom": "2px solid #fc5f36"
      },
      
      "forms": {
        "input_border": "#808080",
        "input_focus_border": "#fc5f36",
        "input_background": "#ffffff",
        "label_color": "#1c2d50",
        "border_radius": "8px"
      },
      
      "alerts": {
        "success": {
          "background": "rgba(127, 176, 105, 0.1)",
          "border": "#7FB069",
          "text": "#1c2d50"
        },
        "warning": {
          "background": "rgba(244, 208, 63, 0.1)",
          "border": "#F4D03F",
          "text": "#1c2d50"
        },
        "error": {
          "background": "rgba(200, 84, 80, 0.1)",
          "border": "#C85450",
          "text": "#1c2d50"
        },
        "info": {
          "background": "rgba(186, 204, 216, 0.1)",
          "border": "#baccd8",
          "text": "#1c2d50"
        }
      },
      
      "badges": {
        "urgent": {
          "background": "#C85450",
          "text": "#ffffff"
        },
        "high": {
          "background": "#fc5f36",
          "text": "#ffffff"
        },
        "standard": {
          "background": "#F4D03F",
          "text": "#1c2d50"
        },
        "low": {
          "background": "#A3C9A8",
          "text": "#ffffff"
        }
      }
    },
    
    "api_endpoints": {
      "base_url": "http://localhost:8001",
      "endpoints": {
        "health": "/api/health",
        "next_task": "/api/tasks/next",
        "submit_task": "/api/tasks/submit",
        "fail_task": "/api/tasks/fail",
        "available_tasks": "/api/tasks/available",
        "scraper_tasks": "/api/scrapers/{scraper_id}/tasks",
        "task_details": "/api/tasks/{task_id}",
        "release_expired": "/api/maintenance/release-expired"
      }
    },
    
    "retool_components": {
      "suggested_layout": [
        {
          "type": "Container",
          "name": "Header",
          "styling": {
            "background": "linear-gradient(135deg, #2C3E50 0%, #1c2d50 100%)",
            "padding": "16px",
            "margin_bottom": "20px"
          },
          "children": [
            {
              "type": "Text", 
              "content": "üöÄ Human Staging Portal",
              "style": "heading",
              "color": "#ffffff"
            },
            {
              "type": "Text",
              "content": "ReputeAI & Valentine Advisors | Content Extraction System", 
              "style": "subtitle",
              "color": "#baccd8"
            }
          ]
        },
        {
          "type": "Container",
          "name": "Dashboard",
          "children": [
            {
              "type": "Text",
              "name": "SystemHealth",
              "query": "{{health_check.data.status}}"
            },
            {
              "type": "Text", 
              "name": "TasksAvailable",
              "query": "{{available_tasks.data.count}}"
            },
            {
