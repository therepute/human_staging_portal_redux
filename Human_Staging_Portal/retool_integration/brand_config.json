      "heading_color": "#2C3E50",
      "body_color": "#1c2d50",
      "accent_color": "#fc5f36"
    },
    
    "component_styles": {
      "buttons": {
        "primary": {
          "background": "#fc5f36",
          "hover_background": "#e54f2c",
          "text_color": "#ffffff",
          "border_radius": "8px",
          "box_shadow": "0 4px 12px rgba(252, 95, 54, 0.3)"
        },
        "secondary": {
          "background": "#1c2d50",
          "hover_background": "#0f1a35",
          "text_color": "#ffffff",
          "border_radius": "8px"
        },
        "success": {
          "background": "#7FB069",
          "hover_background": "#6fa055",
          "text_color": "#ffffff",
          "border_radius": "8px"
        },
        "warning": {
          "background": "#F4D03F",
          "hover_background": "#f1c40f",
          "text_color": "#1c2d50",
          "border_radius": "8px"
        },
        "danger": {
          "background": "#C85450",
          "hover_background": "#b44440",
          "text_color": "#ffffff",
          "border_radius": "8px"
