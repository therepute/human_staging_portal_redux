      "secondary": "#1c2d50",
      "accent": "#baccd8",
      "white": "#ffffff",
      "black": "#000000"
    },
    
    "ui_colors": {
      "border_gray": "#808080",
      "border_dark_gray": "#A9A9A9",
      "text_primary": "#1c2d50",
      "text_secondary": "#2C3E50",
      "background": "#ffffff"
    },
    
    "status_colors": {
      "success": "#7FB069",
      "warning": "#F4D03F", 
      "error": "#C85450",
      "info": "#baccd8",
      "pending": "#D2A3A9"
    },
    
    "accent_colors": {
      "deep_navy": "#2C3E50",
      "dusty_rose": "#D2A3A9",
      "warm_beige": "#E8D5B7",
      "soft_fern": "#A3C9A8",
      "lavender_mist": "#C8B5D1",
      "cream_silk": "#F5E6A8",
